app_name: {{ .Name }}
module: {{ .Module }}
firebird_version: "0.1.0-dev"

application:
  server:
    host: localhost
    port: 8080
    read_timeout: 30s
    write_timeout: 30s

  database:
    driver: postgres
    host: localhost
    port: 5432
    name: {{ .Name }}_dev
    user: postgres
    password: ${DB_PASSWORD}
    sslmode: disable
    max_open_conns: 25
    max_idle_conns: 5
    conn_max_lifetime: 5m

  logging:
    level: info
    format: json
